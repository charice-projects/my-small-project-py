# ======================
# Omniframe Server 配置
# ======================

# 服务器网络设置
OMNIFRAME_HOST=0.0.0.0    # 0.0.0.0表示监听所有网络接口
OMNIFRAME_PORT=8080       # 访问端口：http://localhost:8080
OMNIFRAME_ROOT_PATH=D:/shixi-serve  # 您的工作空间

# 安全设置（开发环境可保持默认）
SECRET_KEY=development-secret-key-change-in-production
ENABLE_AUTH=false         # 开发环境关闭认证
ALLOWED_IPS=127.0.0.1,::1,192.168.0.0/24

# 文件索引配置
INDEX_AUTO_UPDATE=true    # 自动更新索引
INDEX_UPDATE_INTERVAL=300 # 每5分钟检查更新

# 宪法规则
CONSTITUTION_ENABLED=true # 启用安全规则
SAFE_MODE=true           # 启用安全模式

# 文件操作限制
MAX_FILE_SIZE=104857600  # 100MB
MAX_UPLOAD_SIZE=524288000 # 500MB
ALLOW_DELETE=true
ALLOW_OVERWRITE=false

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/omniframe.log

# 上下文管理
CONTEXT_ENABLED=true
CONTEXT_HISTORY_SIZE=100
CONTEXT_AUTO_SAVE=true